---
interface Props {
  id: string;
  title: string;
  description: string;
  href: string;
  articleCount?: number;
}

const { id, title, description, href, articleCount } = Astro.props;
---

<a
  href={href}
  class="group block rounded-xl border border-stone-200 bg-white p-6 transition-all duration-200 hover:border-stone-300 hover:shadow-sm"
>
  <h3 class="font-semibold text-xl leading-snug text-stone-900 group-hover:text-primary-500">
    {title}
  </h3>
  <p class="mt-2 font-literata text-base text-stone-600">
    {description}
  </p>
  {
    articleCount !== undefined && (
      <p class="mt-3 text-xs text-stone-400">
        {articleCount} {articleCount === 1 ? "article" : "articles"}
      </p>
    )
  }
</a>
