---
interface Props {
  title: string;
  subtitle: string;
  cta: string;
  href: string;
  variant: "professionals" | "families";
}

const { title, subtitle, cta, href, variant } = Astro.props;

const variantStyles = {
  professionals: "border-primary-200 hover:border-primary-400 hover:bg-primary-50",
  families: "border-accent-200 hover:border-accent-400 hover:bg-accent-50",
};

const ctaStyles = {
  professionals: "text-primary-500 group-hover:text-primary-600",
  families: "text-accent-600 group-hover:text-accent-700",
};
---

<a
  href={href}
  class={`group block rounded-xl border-2 bg-white p-6 transition-all duration-200 ${variantStyles[variant]}`}
>
  <h2 class="text-xl font-semibold text-stone-900">
    {title}
  </h2>
  <p class="mt-2 font-literata text-stone-600">
    {subtitle}
  </p>
  <p class={`mt-4 flex items-center gap-1 text-sm font-medium ${ctaStyles[variant]}`}>
    {cta}
    <span class="transition-transform group-hover:translate-x-1" aria-hidden="true">
      &rarr;
    </span>
  </p>
</a>
