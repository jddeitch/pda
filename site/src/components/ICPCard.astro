---
interface Props {
  title: string;
  subtitle: string;
  cta: string;
  href: string;
  variant: "professionals" | "families";
}

const { title, subtitle, cta, href, variant } = Astro.props;

const variantStyles = {
  professionals: "border-blue-200 hover:border-blue-400 hover:bg-blue-50",
  families: "border-emerald-200 hover:border-emerald-400 hover:bg-emerald-50",
};

const ctaStyles = {
  professionals: "text-blue-700 group-hover:text-blue-800",
  families: "text-emerald-700 group-hover:text-emerald-800",
};
---

<a
  href={href}
  class={`group block rounded-xl border-2 bg-white p-6 transition-all duration-200 ${variantStyles[variant]}`}
>
  <h2 class="text-xl font-semibold text-gray-900">
    {title}
  </h2>
  <p class="mt-2 text-gray-600">
    {subtitle}
  </p>
  <p class={`mt-4 flex items-center gap-1 text-sm font-medium ${ctaStyles[variant]}`}>
    {cta}
    <span class="transition-transform group-hover:translate-x-1" aria-hidden="true">
      &rarr;
    </span>
  </p>
</a>
