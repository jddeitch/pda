---
/**
 * Answer Capsule Component
 *
 * Optimized for AI citation and discoverability.
 * Placed immediately after H1 for maximum LLM visibility.
 * Uses H2â†’bullet structure (40% more likely to be cited).
 */

import type { Language } from "../i18n/config";
import { t } from "../i18n/translations";

interface Props {
  keyFindings: string[];
  lang: Language;
}

const { keyFindings, lang } = Astro.props;
const translations = t(lang);
---

{
  keyFindings && keyFindings.length > 0 && (
    <div class="rounded-lg border-l-4 border-accent-300 bg-accent-50 p-4">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-accent-700">
        {translations.article.keyFindings}
      </h2>
      <ul class="mt-2 space-y-1">
        {keyFindings.map((finding) => (
          <li class="flex items-start gap-2 text-stone-700">
            <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-accent-500" />
            <span>{finding}</span>
          </li>
        ))}
      </ul>
    </div>
  )
}
