---
export const prerender = false;

import AdminLayout from "../../../layouts/AdminLayout.astro";
import fs from "node:fs";
import path from "node:path";

// Check admin access
if (!import.meta.env.ENABLE_ADMIN) {
  return Astro.redirect("/");
}

const { slug } = Astro.params;
const READY_DIR = "/Users/jd/Projects/pda/cache/articles/ready";
const jsonPath = path.join(READY_DIR, `${slug}_parsed.json`);

// Check if file exists
if (!fs.existsSync(jsonPath)) {
  return Astro.redirect("/admin/review");
}

// Load parsed data
interface ParsedArticle {
  title: string | null;
  authors: string | null;
  year: string | null;
  doi: string | null;
  citation: string | null;
  abstract: string | null;
  body_html: string;
  references: string[];
  method: string | null;
  voice: string | null;
  peer_reviewed: boolean;
  body_reviewed: boolean;
  review_notes: string | null;
}

let parsed: ParsedArticle | null = null;
let parseError: string | null = null;

try {
  const jsonContent = fs.readFileSync(jsonPath, "utf-8");
  parsed = JSON.parse(jsonContent);
} catch (e) {
  parseError = String(e);
}

// Derive source_url from DOI if available
const doiUrl = parsed?.doi ? `https://doi.org/${parsed.doi}` : null;

// Count stats
const bodyLength = parsed?.body_html?.length || 0;
const abstractLength = parsed?.abstract?.length || 0;
const refCount = parsed?.references?.length || 0;
---

<AdminLayout title={`Review: ${slug}`}>
  <div class="space-y-6">
    <!-- Back link -->
    <div>
      <a href="/admin/review" class="text-sm text-primary-500 hover:text-primary-700">
        &larr; Back to list
      </a>
    </div>

    <!-- Page Header -->
    <div class="flex items-start justify-between">
      <div>
        <h1 class="text-2xl font-bold text-stone-900 break-all">{parsed?.title || slug}</h1>
        <p class="mt-1 text-sm text-stone-500">
          {parsed?.authors || 'No authors'} {parsed?.year ? `(${parsed.year})` : ''}
        </p>
      </div>
    </div>

    {parseError ? (
      <div class="rounded-lg bg-red-50 border border-red-200 p-4">
        <h2 class="text-sm font-medium text-red-800">Parse Error</h2>
        <pre class="mt-2 text-xs text-red-700 overflow-auto">{parseError}</pre>
      </div>
    ) : parsed ? (
      <>
        <!-- Stats Row -->
        <div class="flex flex-wrap gap-3">
          <div class="rounded bg-white px-3 py-2 shadow-sm">
            <span class="text-xs text-stone-500">Abstract</span>
            <span class="ml-2 font-medium text-stone-900">{Math.round(abstractLength / 100) / 10} KB</span>
          </div>
          <div class="rounded bg-white px-3 py-2 shadow-sm">
            <span class="text-xs text-stone-500">Body</span>
            <span class="ml-2 font-medium text-stone-900">{Math.round(bodyLength / 1024)} KB</span>
          </div>
          <div class="rounded bg-white px-3 py-2 shadow-sm">
            <span class="text-xs text-stone-500">References</span>
            <span class="ml-2 font-medium text-stone-900">{refCount}</span>
          </div>
          {parsed.doi && (
            <div class="rounded bg-green-50 px-3 py-2 shadow-sm">
              <span class="text-xs text-green-600">DOI</span>
              <span class="ml-2 font-medium text-green-700">{parsed.doi}</span>
            </div>
          )}
        </div>

        <!-- Classification (from Claude) -->
        <div class="rounded-lg bg-blue-50 border border-blue-200 p-4">
          <h2 class="text-sm font-medium text-blue-800 mb-3">Claude's Classification</h2>
          <div class="flex flex-wrap gap-2">
            {parsed.method && (
              <span class="rounded bg-blue-100 text-blue-800 px-3 py-1 text-sm font-medium">
                Method: {parsed.method}
              </span>
            )}
            {parsed.voice && (
              <span class="rounded bg-purple-100 text-purple-800 px-3 py-1 text-sm font-medium">
                Voice: {parsed.voice}
              </span>
            )}
            <span class={`rounded px-3 py-1 text-sm font-medium ${parsed.peer_reviewed ? 'bg-green-100 text-green-800' : 'bg-stone-100 text-stone-600'}`}>
              {parsed.peer_reviewed ? 'Peer Reviewed' : 'Not Peer Reviewed'}
            </span>
          </div>
        </div>

        <!-- Editable Form -->
        <form id="article-form" class="rounded-lg bg-white shadow-sm p-6 space-y-4">
          <div class="flex items-center justify-between border-b border-stone-200 pb-2">
            <h2 class="text-lg font-semibold text-stone-900">
              Human Review
            </h2>
          </div>

          <div id="form-status" class="hidden rounded p-3 text-sm"></div>

          <div class="grid gap-4">
            <!-- Human-only fields -->
            <div class="grid grid-cols-3 gap-4 p-4 bg-amber-50 rounded-lg border border-amber-200">
              <div>
                <label class="block text-xs font-medium text-amber-700 uppercase tracking-wide mb-1">
                  Open Access <span class="text-red-500">*</span>
                </label>
                <label class="inline-flex items-center">
                  <input
                    type="checkbox"
                    id="open_access"
                    name="open_access"
                    class="rounded border-stone-300 text-primary-500 focus:ring-primary-500"
                  />
                  <span class="ml-2 text-sm text-stone-700">Yes, can translate full text</span>
                </label>
                <p class="mt-1 text-xs text-amber-600">Required â€” determines if body can be translated</p>
              </div>
              <div>
                <label for="source_language" class="block text-xs font-medium text-amber-700 uppercase tracking-wide">
                  Source Language
                </label>
                <select
                  id="source_language"
                  name="source_language"
                  class="mt-1 w-full rounded border border-stone-300 px-3 py-2 text-sm bg-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
                >
                  <option value="en" selected>English</option>
                  <option value="fr">French</option>
                </select>
              </div>
              <div>
                <label for="source_url" class="block text-xs font-medium text-amber-700 uppercase tracking-wide">
                  Source URL
                </label>
                <input
                  type="url"
                  id="source_url"
                  name="source_url"
                  value={doiUrl || ""}
                  placeholder="https://..."
                  class="mt-1 w-full rounded border border-stone-300 px-3 py-2 text-sm focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
                />
                {parsed.doi && (
                  <p class="mt-1 text-xs text-amber-600">Pre-filled from DOI</p>
                )}
              </div>
            </div>

            <!-- Title (editable for corrections) -->
            <div>
              <label for="title" class="block text-xs font-medium text-stone-500 uppercase tracking-wide">
                Title
              </label>
              <input
                type="text"
                id="title"
                name="title"
                value={parsed.title || ""}
                class="mt-1 w-full rounded border border-stone-300 px-3 py-2 text-sm focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
              />
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="authors" class="block text-xs font-medium text-stone-500 uppercase tracking-wide">Authors</label>
                <input
                  type="text"
                  id="authors"
                  name="authors"
                  value={parsed.authors || ""}
                  class="mt-1 w-full rounded border border-stone-300 px-3 py-2 text-sm focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
                />
              </div>
              <div>
                <label for="year" class="block text-xs font-medium text-stone-500 uppercase tracking-wide">Year</label>
                <input
                  type="text"
                  id="year"
                  name="year"
                  value={parsed.year || ""}
                  pattern="\d{4}"
                  class="mt-1 w-full rounded border border-stone-300 px-3 py-2 text-sm focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
                />
              </div>
            </div>

            <div>
              <label for="citation" class="block text-xs font-medium text-stone-500 uppercase tracking-wide">Citation</label>
              <input
                type="text"
                id="citation"
                name="citation"
                value={parsed.citation || ""}
                placeholder="e.g., Journal Name 66 (2018) 103-108"
                class="mt-1 w-full rounded border border-stone-300 px-3 py-2 text-sm focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
              />
            </div>
          </div>

          <!-- Hidden fields -->
          <input type="hidden" id="slug" name="slug" value={slug} />
          <input type="hidden" id="doi" name="doi" value={parsed.doi || ""} />
          <input type="hidden" id="method" name="method" value={parsed.method || ""} />
          <input type="hidden" id="voice" name="voice" value={parsed.voice || ""} />
          <input type="hidden" id="peer_reviewed" name="peer_reviewed" value={parsed.peer_reviewed ? "1" : "0"} />
          <input type="hidden" id="body_html" name="body_html" value={parsed.body_html || ""} />
          <input type="hidden" id="references_json" name="references_json" value={JSON.stringify(parsed.references || [])} />

          <!-- Action Buttons -->
          <div class="flex justify-end gap-3 pt-4 border-t border-stone-200">
            <button
              type="button"
              id="reject-btn"
              class="rounded bg-red-100 px-4 py-2 text-sm font-medium text-red-700 hover:bg-red-200"
            >
              Reject (Send Back)
            </button>
            <button
              type="submit"
              class="rounded bg-green-600 px-6 py-2 text-sm font-medium text-white hover:bg-green-700"
            >
              Approve &amp; Save to Database
            </button>
          </div>
        </form>

        <!-- Abstract Card -->
        <div class="rounded-lg bg-white shadow-sm p-6">
          <h2 class="text-lg font-semibold text-stone-900 border-b border-stone-200 pb-2 mb-4">
            Abstract
            <span class="text-sm font-normal text-stone-500 ml-2">
              ({abstractLength} chars)
            </span>
          </h2>
          <textarea
            id="abstract"
            name="abstract"
            form="article-form"
            rows="6"
            class="w-full rounded border border-stone-300 px-3 py-2 text-sm leading-relaxed focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
          >{parsed.abstract || ""}</textarea>
        </div>

        <!-- Body HTML Card -->
        <div class="rounded-lg bg-white shadow-sm p-6">
          <h2 class="text-lg font-semibold text-stone-900 border-b border-stone-200 pb-2 mb-4">
            Body Content
            <span class="text-sm font-normal text-stone-500 ml-2">
              ({Math.round(bodyLength / 1024)} KB)
            </span>
          </h2>
          <div
            class="prose prose-stone prose-sm max-w-none article-body"
            set:html={parsed.body_html}
          />
        </div>

        <!-- References -->
        {refCount > 0 && (
          <div class="rounded-lg bg-white shadow-sm p-6">
            <h2 class="text-lg font-semibold text-stone-900 border-b border-stone-200 pb-2 mb-4">
              References
              <span class="text-sm font-normal text-stone-500 ml-2">
                ({refCount})
              </span>
            </h2>
            <ol class="list-decimal list-inside space-y-1 text-sm text-stone-700">
              {parsed.references.map((ref) => (
                <li class="leading-relaxed">{ref}</li>
              ))}
            </ol>
          </div>
        )}
      </>
    ) : (
      <div class="rounded-lg bg-amber-50 border border-amber-200 p-4">
        <h2 class="text-sm font-medium text-amber-800">File Not Found</h2>
        <p class="mt-1 text-sm text-amber-700">
          Could not load article data.
        </p>
      </div>
    )}
  </div>
</AdminLayout>

<style>
  .article-body :global(h1) { font-size: 1.25rem; font-weight: 700; margin-top: 2rem; margin-bottom: 1rem; color: #1c1917; }
  .article-body :global(h2) { font-size: 1.125rem; font-weight: 600; margin-top: 1.5rem; margin-bottom: 0.75rem; color: #292524; }
  .article-body :global(h3) { font-size: 1rem; font-weight: 600; margin-top: 1rem; margin-bottom: 0.5rem; color: #292524; }
  .article-body :global(p) { margin-bottom: 1rem; line-height: 1.625; }
  .article-body :global(table) { width: 100%; border-collapse: collapse; margin: 1rem 0; font-size: 0.75rem; }
  .article-body :global(th), .article-body :global(td) { border: 1px solid #d6d3d1; padding: 0.25rem 0.5rem; }
  .article-body :global(th) { background-color: #f5f5f4; font-weight: 500; }
  .article-body :global(img) { max-width: 100%; height: auto; margin: 1rem 0; border-radius: 0.25rem; }
  .article-body :global(hr) { border: none; border-top: 1px solid #d6d3d1; margin: 0.5rem 0; }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('article-form') as HTMLFormElement;
    const statusEl = document.getElementById('form-status');
    const rejectBtn = document.getElementById('reject-btn');

    if (!form) return;

    // Approve (form submit)
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'Saving...';
      submitBtn.disabled = true;

      try {
        const formData = new FormData(form);
        const data = {
          action: 'approve',
          slug: formData.get('slug'),
          title: formData.get('title'),
          authors: formData.get('authors'),
          year: formData.get('year'),
          citation: formData.get('citation'),
          abstract: formData.get('abstract'),
          body_html: formData.get('body_html'),
          references_json: JSON.parse(formData.get('references_json') as string || '[]'),
          doi: formData.get('doi'),
          method: formData.get('method'),
          voice: formData.get('voice'),
          peer_reviewed: formData.get('peer_reviewed') === '1',
          open_access: (document.getElementById('open_access') as HTMLInputElement).checked,
          source_language: formData.get('source_language'),
          source_url: formData.get('source_url'),
        };

        const response = await fetch('/api/save-parsed-article', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        });

        const result = await response.json();

        if (response.ok) {
          showStatus(`Article approved and saved! ID: ${result.articleId}`, 'success');
          setTimeout(() => window.location.href = '/admin/review', 2000);
        } else {
          showStatus(`Error: ${result.error}`, 'error');
        }
      } catch (err) {
        showStatus(`Network error: ${err}`, 'error');
      } finally {
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }
    });

    // Reject button
    if (rejectBtn) {
      rejectBtn.addEventListener('click', async () => {
        if (!confirm('Reject this article and send it back for rework?')) return;

        rejectBtn.textContent = 'Rejecting...';
        (rejectBtn as HTMLButtonElement).disabled = true;

        try {
          const slug = (document.getElementById('slug') as HTMLInputElement).value;
          const response = await fetch('/api/save-parsed-article', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ action: 'reject', slug }),
          });

          const result = await response.json();

          if (response.ok) {
            showStatus('Article rejected and moved back for rework.', 'success');
            setTimeout(() => window.location.href = '/admin/review', 2000);
          } else {
            showStatus(`Error: ${result.error}`, 'error');
          }
        } catch (err) {
          showStatus(`Network error: ${err}`, 'error');
        } finally {
          rejectBtn.textContent = 'Reject (Send Back)';
          (rejectBtn as HTMLButtonElement).disabled = false;
        }
      });
    }

    function showStatus(message: string, type: 'success' | 'error') {
      if (!statusEl) return;
      statusEl.textContent = message;
      statusEl.classList.remove('hidden', 'bg-green-100', 'text-green-800', 'bg-red-100', 'text-red-800');
      statusEl.classList.add(type === 'success' ? 'bg-green-100' : 'bg-red-100');
      statusEl.classList.add(type === 'success' ? 'text-green-800' : 'text-red-800');
    }
  });
</script>
